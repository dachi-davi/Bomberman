        <Button fx:id="back" layoutX="239.0" layoutY="340.0" mnemonicParsing="false" onAction="#switchToStartScreen" prefHeight="46.0" prefWidth="122.0" style="-fx-background-color: #4285f4; -fx-text-fill: white;" text="Back" />

